<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/CVCharacterItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/strokeBorder"
        app:cardCornerRadius="10dp"
        android:alpha="0.9"
        app:strokeWidth="1dp"

        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/CLCharacterItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/stroke"
            android:padding="10dp"
            >


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/IWCharacter"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/ic_baseline_account_circle_24"
                app:civ_border_width="2dp"
                android:foregroundGravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:civ_border_color="@color/strokeBorder"/>

            <TextView
                android:id="@+id/TWCharacterItemTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:fontFamily="@font/opensanssemibold"
                android:text="Character Title"
                android:textColor="@color/strokeBorder"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/IWCharacter"
                />
            <TextView
                android:id="@+id/TWCharacterItemStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:fontFamily="@font/opensanslightitalic"
                android:text="Character Status"
                android:textColor="@color/strokeBorder"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/TWCharacterItemTitle"
                />

            <TextView
                android:id="@+id/TWCharacterItemSpecifies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:fontFamily="@font/opensansregular"
                android:text="Character Specifies"
                android:textColor="@color/strokeBorder"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/TWCharacterItemStatus"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>